{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode"],
  "scripts": {
     "copy-files": "copyfiles -u 1 src/**/*.html dist/",
  },
}
